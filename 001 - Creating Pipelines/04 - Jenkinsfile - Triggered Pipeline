pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    triggers {
      pollSCM '* * * * *'
    }
    stages {
        stage('build') {
            steps {
                sh 'cat /etc/alpine-release'
            }
        }
	stage('build') {
            steps {
              import java.text.SimpleDateFormat
def date = new Date()
def sdf = new SimpleDateFormat("MM/dd/yyyy HH:mm:ss")
println sdf.format(date)
            }
        }
    }
}
