pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    triggers {
      pollSCM '* * * * *'
    }
    stages {
        stage('build') {
            steps {
                sh 'cat /etc/alpine-release'
            }
        }
	stage('build') {
            steps {
	    	echo "$now"
		echo "Current date: $now"
            }
        }
    }
}
